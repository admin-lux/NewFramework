<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/de_login_logo"
            android:layout_width="90dip"
            android:layout_height="90dip"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="77.3dp"
            android:src="@mipmap/login_doc_logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/liner1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19.3dip"
                android:layout_marginRight="19.3dip"
                android:orientation="horizontal">


                <com.newframework.ui.widget.ClearWriteEditText
                    android:id="@+id/de_login_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ed_public_bg_selector"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:hint="输入手机号"
                    android:maxLength="11"
                    android:phoneNumber="true"
                    android:singleLine="true"
                    android:textColor="#999999"
                    android:textColorHint="#999999"
                    android:textSize="18sp" />

                <FrameLayout
                    android:id="@+id/fr_username_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/de_login_phone"
                    android:layout_centerVertical="true"
                    android:visibility="gone">

                </FrameLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/liner2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19.3dip"
                android:layout_marginRight="19.3dip"
                android:layout_marginTop="15.3dip"
                android:orientation="horizontal">


                <com.newframework.ui.widget.ClearWriteEditText
                    android:id="@+id/de_login_password"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ed_public_bg_selector"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:hint="登录密码"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textColor="#999999"
                    android:textColorHint="#999999"
                    android:textSize="18sp" />

                <FrameLayout
                    android:id="@+id/fr_pass_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/de_login_password"
                    android:layout_centerVertical="true"
                    android:visibility="gone">

                </FrameLayout>


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dip"
                android:layout_marginRight="24dip"
                android:layout_marginTop="5dip"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/de_login_forgot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:padding="2dip"
                    android:text="@string/forgot_password"
                    android:textColor="@color/colorBlue"
                    android:textSize="14sp" />

                <View
                    android:layout_width="0dip"
                    android:layout_height="0.1dip"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/de_login_register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:padding="2dip"
                    android:text="注册"
                    android:textColor="@drawable/bt_register_text_color"
                    android:textSize="14sp" />
            </LinearLayout>

            <Button
                android:id="@+id/de_login_sign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19dip"
                android:layout_marginRight="19dip"
                android:layout_marginTop="36dip"
                android:background="@drawable/rs_select_btn_blue"
                android:text="@string/login"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />


        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
